<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/scrim"
	android:clickable="true"
	android:contentDescription="dialog"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		
		android:clickable="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:elevation="@dimen/z_dialog"
		android:padding="@dimen/spacing_large"
		android:background="@drawable/cornered"
		android:layout_margin="@dimen/spacing_xxlarge"
		>

		<TextView	
			android:visibility="gone"
			android:textColor="?android:textColorPrimary"
			android:id="@+id/dialog_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/spacing_normal"
			android:layout_marginRight="@dimen/spacing_normal"
			android:layout_marginTop="@dimen/spacing_small"
			android:layout_marginBottom="@dimen/spacing_small"
			android:letterSpacing="@dimen/letter_spacing_normal"
			android:textSize="@dimen/tsize_large"/>
		<FrameLayout
			android:id="@+id/dialog_msg_container"
			android:visibility="gone"
			android:layout_alignStart="@id/dialog_title"
			android:layout_marginTop="@dimen/spacing_normal"
			android:layout_marginBottom="@dimen/spacing_normal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/dialog_title">
			<TextView
				android:id="@+id/dialog_msg"
				android:autoLink="web"
				android:letterSpacing="@dimen/letter_spacing_small"
				android:textSize="@dimen/tsize_normal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</FrameLayout>
		
		<LinearLayout
			
			android:layout_below="@id/dialog_msg_container"
			android:id="@+id/dialog_btn_container"
			android:layout_marginBottom="@dimen/minus_spacing_small"
			android:layout_marginTop="@dimen/spacing_normal"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:gravity="end|center_vertical">

			<Button
				android:visibility="gone"
				style="?android:attr/borderlessButtonStyle"
				android:layout_marginRight="@dimen/spacing_normal"
				android:textColor="?android:colorAccent"
				android:id="@+id/dialog_negative_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

			<Button
				android:visibility="gone"
				style="@style/FlatColoredButtonStyle"
				android:textColor="@android:color/white"
				android:id="@+id/dialog_positive_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"/>
		</LinearLayout>
		
      

		
	</RelativeLayout>
</FrameLayout>

